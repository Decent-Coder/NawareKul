@model NawareKulCore.DataBL.PeopleDTO

<h2>Add New Person Information</h2>

<form asp-controller="Home" asp-action="OnlineForm" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Photo:</label>
                <input type="file" name="PhotoFile" accept="image/*" class="form-control-file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Address:</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>City:</label>
                <input asp-for="City" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>District:</label>
                <input asp-for="District" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Pincode:</label>
                <input asp-for="Pincode" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>State:</label>
                <input asp-for="State" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Country:</label>
                <input asp-for="Country" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Mobile Number:</label>
                <input asp-for="MobileNumber" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Email ID:</label>
        <input asp-for="EmailId" class="form-control" />
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Birthdate:</label>
                <input type="date" asp-for="Birthdate" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Blood Group:</label>
                <input asp-for="BloodGroup" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Education:</label>
                <input asp-for="Education" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Job:</label>
                <input asp-for="Job" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Native Place:</label>
                <input asp-for="NativePlace" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Gotra:</label>
                <input asp-for="Gotra" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Kuldeveta:</label>
                <textarea asp-for="Kuldeveta" class="form-control"></textarea>
            </div>
        </div>
       
    </div>
    <br />
    <div>
        @Html.Partial("FamilyDetailsPartialView")

    </div>

    <br />
    <div>
        @Html.Partial("OtherInformationPartialView")
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
